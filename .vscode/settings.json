{
    // --- üé® APAR√äNCIA (Seu conforto visual mantido) ---
    "window.zoomLevel": 1,
    "editor.fontSize": 18,
    "workbench.colorTheme": "Sweet Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "terminal.integrated.keyboard.dispatch": "keyCode",
    
    // R√©guas visuais que o professor pediu (ajuda a manter o c√≥digo organizado)
    "editor.rulers": [80, 120],
    
    // Fontes de programador (Lista do professor)
    "editor.fontFamily": "'Fira Code', Consolas, 'Dank Mono', 'Source Code Pro', 'Fira Code', Menlo, 'Inconsolata', 'Droid Sans Mono', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', Courier, Monaco, monospace",
    "editor.fontLigatures": false,

    // --- üõ†Ô∏è COMPORTAMENTO GERAL ---
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.hover.enabled": true,
    
    // Trava global de formata√ß√£o (Seguran√ßa para seus outros projetos)
    "editor.formatOnSave": false,

    // --- üöÄ CODE RUNNER (Padr√£o da Aula + Espa√ßo no Final) ---
    "code-runner.executorMap": {
        "python": "clear ; python -u $fullFileName ; echo ''"
    },
    "code-runner.runInTerminal": true,
    "code-runner.ignoreSelection": true,

    // --- üêç PYTHON (Configura√ß√£o RIGOROSA do Professor) ---
    // Estas configura√ß√µes s√≥ valem para arquivos .py
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        // Aqui ativamos a formata√ß√£o autom√°tica S√ì para Python, como o professor quer
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },

    // Configura√ß√µes avan√ßadas de an√°lise do Python (Linting)
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    
    // Regras de formata√ß√£o (PEP8 - Padr√£o Python)
    "python.formatting.autopep8Args": [
        "--indent-size=4",
        "--max-line-length=80"
    ],
    
    // Verificadores de erros (Flake8 e MyPy)
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [],
    "python.linting.mypyEnabled": true,
    
    // Testes
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    // Ignorar erros chatos do Pylance que o professor desativou
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnknownMemberType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownLambdaType": "none",
        "reportUnknownParameterType": "none"
    },

    // Corretor Ortogr√°fico (cSpell)
    "cSpell.enabled": true,

    // --- üíª TERMINAIS (Sua configura√ß√£o robusta) ---
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.fontSize": 18, // Ajustei para 18 para combinar com seu editor
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Git Bash": {
            "path": ["C:\\Program Files\\Git\\bin\\bash.exe"],
            "icon": "terminal-bash"
        },
        "Command Prompt": {
            "path": ["${env:windir}\\System32\\cmd.exe"],
            "args": [],
            "icon": "terminal-cmd"
        }
    },

    // --- üêô OUTROS ---
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.enableSmartCommit": true,
    "git.ignoreRebaseWarning": true,
    "git.confirmSync": false
}